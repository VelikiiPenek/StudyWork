@model Employer
@{
    ViewData["Title"] = "Страница работодателя";
}
<h1>Страница работодателя</h1>

<form method="post" asp-controller="Employer" asp-action="Check">
    <label asp-for="Name"></label>
    <input asp-for="Name" />
    <span asp-validation-for="Name"></span>

    <label asp-for="Surname"></label>
    <input asp-for="Surname" />
    <span asp-validation-for="Surname"></span>

<label asp-for="Otch"></label>
    <input asp-for="Otch" />
    <span asp-validation-for="Otch"></span>

    <label asp-for="Company"></label>
    <input asp-for="Company" />
    <span asp-validation-for="Company"></span>

    

    <input type="submit" value="Отправить" />
</form>